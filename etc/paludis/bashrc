#ICECC_VERSION="$(cat /usr/local/share/icecream/ICECC_VERSION )"

ICE_CFLAGS="-pipe -O2 -march=x86-64 -mtune=generic"
ICE_CXXFLAGS=$ICE_CFLAGS

#i686_pc_linux_gnu_CFLAGS=$ICE_CFLAGS
#i686_pc_linux_gnu_CXXFLAGS=$ICE_CXXFLAGS

i686_pc_linux_gnu_CFLAGS="$NATIVE_SPECIFIC $COMMON $AGRESSIVE ${LDFLAGS}"
#i686_pc_linux_gnu_CFLAGS=$NORMAL

i686_pc_linux_gnu_CXXFLAGS="$i686_pc_linux_gnu_CFLAGS"

